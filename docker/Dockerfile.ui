FROM python:3.13-slim

WORKDIR /app

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

# Copy dependency files
COPY pyproject.toml uv.lock ./

# Install dependencies with UI extras (cached layer)
RUN uv sync --frozen --no-dev --extra ui --no-install-project

# Copy source code
COPY src/ src/

# Install project
RUN uv sync --frozen --no-dev --extra ui

EXPOSE 8501

CMD ["uv", "run", "streamlit", "run", "src/pharmagraphrag/ui/app.py", "--server.port=8501", "--server.address=0.0.0.0"]
